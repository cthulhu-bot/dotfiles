# Some manual setup you still need to do
# chsh -s `which zsh`
# Install Snazzy
# Install DankMono font

cd ~
if [ -f ~/.zshrc ]; then
    cp ~/.zshrc ~/.zshrc.bak
    rm -rf ~/.zshrc
fi

# Install Prezto
# if [ -f ~/.zprezto ]; then
